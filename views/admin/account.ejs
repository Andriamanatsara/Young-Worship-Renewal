<%- include('../partials/dashboard-header.ejs') %> 

<div class="container">
    <div class="row">
        <div class="col-md-7 mt-3">
            <div class="table-container">
                <div class="text-center">
                    <h3 class=" fw-bold" >Compte du groupe</h3>
                </div>
                <form action="" method="POST">
                    <div class="row">
                        <div class="col-sm-6 mt-3">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="categorie" placeholder="Enter email" name="categorie">
                                <label for="categorie">Categorie</label>
                            </div>
                        </div>
                        <div class="col-sm-6 mt-3">
                            <div class="form-floating">
                                <input type="number" class="form-control" id="montant" placeholder="Enter email" name="montant">
                                <label for="montant">Montant</label>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-around mt-3">
                        <div class="form-check">
                            <label class="form-check-label" for="check1">Don</label>
                            <input class="form-check-input" type="radio" id="check1" name="type" value="don" >
                        </div>
                        <div class="form-check">
                            <label class="form-check-label" for="check2">Offrande</label>
                            <input class="form-check-input" type="radio" id="check2" name="type" value="offrande">
                        </div>
                        <div class="form-check">
                            <label class="form-check-label" for="check3">Dépense</label>
                            <input class="form-check-input" type="radio" id="check3" name="type" value="dépense" >
                        </div>
                    </div>
                    <div class="form-floating mt-3">
                        <textarea id="description" name="description" class="form-control" placeholder="Enter description" style="height: 150px;"></textarea>
                        <label for="description">Déscription</label>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3 w-100">Soumetre</button>
                </form>
            </div>
        </div>
        <div class="col-md-4 mt-3">
            <div class="table-container">
                <% if(solde != '') { %>
                    <h5 class="fw-bold">Solde actuel : <%= solde %> Ar</h3>
                <%  } else {%>
                    <h5 class="fw-bold">Solde actuel : 0 Ar</h3>
                <%  } %> 
            </div>
            <div class="acount-list">
                
            </div>
        </div>
    </div>
</div>

<%- include('../partials/dashboard-footer.ejs') %>